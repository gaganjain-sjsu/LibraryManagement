<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginHorizontal="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/cart_book_img"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/sampleimage"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/cart_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="Cracking The Coding Interview"
                android:textColor="@color/background_dark"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/cart_book_img"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/cart_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Gayle"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/cart_book_img"
                app:layout_constraintTop_toBottomOf="@+id/cart_book_name"/>

            <TextView
                android:id="@+id/remove_cart_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/remove"
                android:textColor="@color/login_background"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="@string/remove"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>